import random sys;

class Main {
    fun __init__ self {
        !print 'Hey!';
        $self.get_input a = 'Enter file name: ';
        !self.importFile a;
    }

    fun get_input self prompt {
        if sys.version_info[0] < 3 {
            return `!raw_input prompt;`;
        } else {
            return `!input prompt;`;
        }
    }

    fun findFile self fileName {
        if sys.version_info[0] < 3 {
            $var FileNotFound = IOError;
        } else {
            $var FileNotFound = FileNotFoundError;
        }
        try {
            $open f = fileName;
            !f.close;
            return True;
        } catch FileNotFound {
            return False;
        }
    }

    fun importFile self fileName {
        if `!self.findFile fileName;` {
            !print 'Found file.';
        } else {
            !print "File doesn't exist.";
        }
    }

    fun roundNumber self num places=0 {
        $round num = num, places;
        return num;
    }
}
